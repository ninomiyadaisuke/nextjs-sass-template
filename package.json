{
  "name": "product-management-system-practice",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "run-p dev:*",
    "dev:next": "next dev",
    "dev:sass": "typed-scss-modules src",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "style:lint": "eslint --fix './src/**/*.{js,jsx,ts,tsx}'",
    "style:check": "prettier --check './src/**/*.{js,jsx,ts,tsx}'",
    "style:write": "prettier --write './src/**/*.{js,jsx,ts,tsx}'",
    "test": "eslint --fix -f table './src/**/*.ts' './src/**/*.tsx'",
    "pretty-quick": "pretty-quick",
    "lint-staged": "lint-staged",
    "prepare": "husky install"
  },
  "dependencies": {
    "@hookform/resolvers": "^2.9.10",
    "html-react-parser": "^3.0.7",
    "jotai": "^1.12.1",
    "next": "^13.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.41.5",
    "use-breakpoint": "^3.0.6",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "eslint": "^8.31.0",
    "eslint-config-next": "^13.1.1",
    "eslint-config-prettier": "^8.6.0",
    "eslint-formatter-table": "^7.32.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "sass": "^1.57.1",
    "typed-scss-modules": "^7.0.1",
    "typescript": "^4.9.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix -f table"
    ]
  }
}
